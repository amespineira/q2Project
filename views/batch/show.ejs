<% include ../layout %>

<section class="batch_show">

  <aside class="aside_batch">
    <div class="containerC">
      <div class="item text-center">
        <h4><%= beer[0].beer_name %> Ingredients <input type="button" name="name" value=""></h4>
        <hr>
        <div class="table">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <%for(var i = 0; i < ing.length; i++){ %>
                <tr>
                  <td><%= ing[i].ingredient_name %></td>
                  <td><%= ing[i].ingredient_type %></td>
                  <td><%= ing[i].amount %> <%= ing[i].units %></td>
                </tr>
                <%} %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="item text-center">
        <h4>Equipment</h4>
        <hr>
        <div class="table">
          <table>
            <thead>
              <tr>
                <th>Equipment</th>
                <th>Clean?</th>
                <th>Clean Time</th>
              </tr>
            </thead>
            <tbody>
              <%for(var i = 0; i < equipment.length; i++){ %>
                <tr>
                  <td><%= equipment[i].equipment_name %></td>
                  <td><%= equipment[i].clean %></td>
                  <td><%= equipment[i].clean_time %></td>
                </tr>
                <%} %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="item">
        <h4>Brewer's Notes</h4>
        <hr>
        <%for(var i =0; i< notes.length; i++){ %>
        <h6><%= notes[i].notes %></h6>
        <% } %>
        <form action="/batch/notes/<%= beer[0].user_id %>" method="post">
          <input type="number" name="beer_id" value="<%= beer_id %>" hidden>
          <input type="number" name="batch_id" value="<%= batch_id %>" hidden>
          <textarea rows="4" name="notes" cols="50" placeholder="enter new note"></textarea>
          <input type="submit" class="btn btn-default" value="add note">
        </form>
      </div>
    </div>

  </aside>
  <main class="main_batch">

  <h3><%= beer[0].beer_name %> | <%= beer[0].type %> | <%= beer[0].style %></h3>
  <div class="container">
            <div class="row bs-wizard" style="border-bottom:0;">
              <%var states=[]%>
              <%switch(curr_stage){
                case 1:
                  states[0]='active'
                  states[1]='disabled'
                  states[2]='disabled'
                  states[3]='disabled'
                  break;
                case 2:
                  states[0]='complete'
                  states[1]='active'
                  states[2]='disabled'
                  states[3]='disabled'
                  break;
                case 3:
                  states[0]='complete'
                  states[1]='complete'
                  states[2]='active'
                  states[3]='disabled'
                  break;
                case 4:
                  states[0]='complete'
                  states[1]='complete'
                  states[2]='complete'
                  states[3]='complete'
                  break;
              }%>
                <div class="col-xs-3 bs-wizard-step <%=states[0]%>">
                  <div class="text-center bs-wizard-stepnum">&nbsp</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Brew Day</div>
                </div>

                <div class="col-xs-3 bs-wizard-step <%=states[1]%>"><!-- complete -->
                  <div class="text-center bs-wizard-stepnum">&nbsp</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Fermentation Monitoring</div>
                </div>

                <div class="col-xs-3 bs-wizard-step <%=states[2]%>"><!-- complete -->
                  <div class="text-center bs-wizard-stepnum">&nbsp</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Bottling Day</div>
                </div>

                <div class="col-xs-3 bs-wizard-step <%=states[3]%>"><!-- active -->
                  <div class="text-center bs-wizard-stepnum">&nbsp</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Drink!</div>
                </div>
            </div>
	      </div>
  </div>
  <div class="steps">

  </div>

</main>

</section>
