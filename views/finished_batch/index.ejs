<% include ../layout %>
<div class="container-fluid" id="whole_thing">
    <div class="jumbotron text-center" id="finished_batch_jumbotron">
        <h1><%= finished_batch.beer_name %>- Batch #<%=finished_batch.batch_id%></h1>
    </div>

    <div class="container" id="finished_batch_table">
            <h1>Beer Flavor Profile</h1>
            <table class="batch table-bordered" >
                <thead>
                    <tr>
                        <th>Taste</th>
                        <th>Aftertaste</th>
                        <th>Appearance</th>
                        <th>Smell</th>
                        <th>Mouth Feel</th>
                        <th>Drinkability</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= finished_batch.taste%>
                        </td>
                        <td>
                            <%= finished_batch.aftertaste%>
                        </td>
                        <td>
                            <%= finished_batch.appearance%>
                        </td>
                        <td>
                            <%= finished_batch.smell%>
                        </td>
                        <td>
                            <%= finished_batch.mouth_feel%>
                        </td>
                        <td>
                            <%= finished_batch.drinkability%>
                        </td>
                    </tr>
                </tbody>
            </table>
    </div>

    <div class="container text-center" id="finished_batch_recipe">
        <h1>Recipe Information</h1>
        <div class="row text-center">
            <div class="col-md-6">
                <h2>Ingredients</h2>
                <% for (i=0;i<ingredients.length;i++){%>
                    <ul class="list-unstyled">
                        <li class="finished_batch">
                            <%=ingredients[i].ingredient_name%>
                        </li>
                    </ul>
                <%}%>
            </div>
            <div class="col-md-6">
                <h2>Equipment</h2>
                <% for (i=0;i<equipment.length;i++){%>
                    <ul class="list-unstyled">
                        <li class="finished_batch">
                            <%=equipment[i].equipment_name%>
                        </li>
                    </ul>
                <%}%>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-6">
                <h2>Wort Collection</h2>
                <ul class="list-unstyled">
                    <li class="finished_batch">
                        <%=beer_stats.wort_collection %> liters
                    </li>
                </ul>
            </div>
            <div class="col-md-6">
                <h2>Expected/Actual Yield</h2>
                <ul class="list-unstyled">
                    <li>
                        Expected:
                        <%=batch.expected_yield%> liters
                    </li>
                    <li>
                        Actual:
                        <%=batch.actual_yield%> liters
                    </li>
                </ul>
            </div>
        </div>
        <h1>Brewer Notes</h1>
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-2 well text-left">
                <% for (i=0;i < brewer_notes.length;i++){%>
                    <%= brewer_notes[i].notes %>
                    <%}%>
                </div>
            </div>
    </div>
</div>
