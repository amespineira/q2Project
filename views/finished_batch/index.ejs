<% include ../layout %>

    <section>
        <div class="jumbotron text-center">
            <div class="container">
                <h1><%= finished_batch.beer_name %>- Batch #<%=finished_batch.batch_id%></h1>
            </div>
        </div>
        <div class="container">
            <h1>Beer Profile</h1>
            <table class="batch">
                <thead>
                    <tr>
                        <th>Taste</th>
                        <th>Aftertaste</th>
                        <th>Appearance</th>
                        <th>Smell</th>
                        <th>Mouth Feel</th>
                        <th>Drinkability</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= finished_batch.taste%>
                        </td>
                        <td>
                            <%= finished_batch.aftertaste%>
                        </td>
                        <td>
                            <%= finished_batch.appearance%>
                        </td>
                        <td>
                            <%= finished_batch.smell%>
                        </td>
                        <td>
                            <%= finished_batch.mouth_feel%>
                        </td>
                        <td>
                            <%= finished_batch.drinkability%>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 text-left">
                    <h2>Ingredients</h2>
                    <% for (i=0;i<ingredients.length;i++){%>
                        <ul>
                            <li class="finished_batch">
                                <%=ingredients[i].ingredient_name%>
                            </li>
                        </ul>
                        <%}%>
                </div>

            </div>
            <div class="row">
                <div class="col-md-8 text-left">
                    <h2>Equipment</h2>
                    <% for (i=0;i<equipment.length;i++){%>
                        <ul>
                            <li class="finished_batch">
                                <%=equipment[i].equipment_name%>
                            </li>
                        </ul>
                        <%}%>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 text-left">
                    <h2>Beer Size</h2>
                    <ul>
                        <li class="finished_batch">
                            <%=beer_stats.wort_collection %>

                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="container text-left">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Notes</button>
                <span class="caret"></span>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">

                        <% for (i=0;i < brewer_notes.length;i++){%>
                            <li style="color:black">
                                Note <%= i+1 %>
                            </li>
                        <%}%>

                </ul>
            </div>
        </div>
