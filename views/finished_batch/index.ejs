<% include ../layout %>

<section>
<h1><%= finished_batch.beer_name %>- Batch #<%=finished_batch.batch_id%></h1>
<div class="table">
  <table class="batch">
    <thead>
      <tr>
        <th>Taste</th>
        <th>Aftertaste</th>
        <th>Appearance</th>
        <th>Smell</th>
        <th>Mouth Feel</th>
        <th>Drinkability</th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%= finished_batch.taste%></td>
          <td><%= finished_batch.aftertaste%></td>
          <td><%= finished_batch.appearance%></td>
          <td><%= finished_batch.smell%></td>
          <td><%= finished_batch['mouth feel']%></td>
          <td><%= finished_batch.drinkability%></td>
        </tr>
      </tbody>
  </table>
</div>
</section>
